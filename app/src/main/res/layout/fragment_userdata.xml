<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.userdata.UserdataFragment">

    <!-- Image en arrière-plan -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/userdata_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_marginTop="276dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >


        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username :"
                android:width="100dp"

                android:layout_marginEnd="8dp" />
            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_frame"
                android:layout_weight="1"
                android:hint="Entrez votre username" />
        </LinearLayout>

        <!-- Mot de passe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe :"
                android:width="100dp"

                android:layout_marginEnd="8dp" />
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_frame"
                android:hint="Entrez votre mot de passe"
                android:inputType="textPassword" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:width="100dp"

                android:layout_marginEnd="8dp" />
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_frame"
                android:hint="Entrez votre email"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <!-- Date de naissance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de naissance :"
                android:width="100dp"
                android:layout_marginEnd="8dp" />
            <EditText
                android:id="@+id/editTextDateBirth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_frame"
                android:hint="Entrez votre date de naissance"
                android:inputType="date" />
        </LinearLayout>

        <!-- Bouton pour insérer une photo -->
        <Button
            android:id="@+id/buttonInsertPhoto"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/button_style_login"
            android:text="Insérer une photo"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:elevation="4dp"
            android:layout_gravity="center"/>

        <!-- Bouton pour valider -->
        <Button
            android:text="Valider"
            android:id="@+id/button_validate_userdata"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/button_style_login"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:elevation="4dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>